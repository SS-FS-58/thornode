mkfile_path := $(abspath $(lastword $(MAKEFILE_LIST)))
path := $(dir $(mkfile_path))
TAG ?= sandbox

ifeq ($(OS),Windows_NT)
    uname_S := Windows
else
    uname_S := $(shell uname -s)
endif

run-mocknet-standalone: 
	TAG=${TAG} NET=mocknet docker-compose -p thornode -f ${path}../components/standalone.base.yml -f ${path}../components/frontend.yml -f ${path}../components/midgard.yml -f ${path}../components/tss.yml -f ${path}../components/mock-binance.yml -f ${path}../mocknet/standalone.yml -f ${path}../components/standalone.${uname_S}.yml up --force-recreate --remove-orphans -d

reset-mocknet-standalone: stop clean run-mocknet-standalone

run-mocknet-genesis: 
	TAG=${TAG} NET=mocknet docker-compose -p thornode -f ${path}../components/genesis.base.yml -f ${path}../components/frontend.yml -f ${path}../components/midgard.yml -f ${path}../components/mock-binance.yml -f ${path}../mocknet/genesis.yml up --force-recreate --remove-orphans -d

reset-mocknet-genesis: stop clean run-mocknet-genesis

run-mocknet-genesis-churn: 
	TAG=${TAG} NET=mocknet docker-compose -p thornode -f ${path}../components/genesis.base.yml -f ${path}../components/fifthnode.yml -f ${path}../components/frontend.yml -f ${path}../components/midgard.yml -f ${path}../components/mock-binance.yml -f ${path}../mocknet/genesis.yml -f ${path}../mocknet/churn.yml up --force-recreate --remove-orphans -d

reset-mocknet-genesis-churn: stop clean run-mocknet-genesis-churn

run-mocknet-validator: 
	TAG=${TAG} NET=mocknet docker-compose -p thornode -f ${path}../components/frontend.yml -f ${path}../components/midgard.yml -f ${path}../components/validator.yml -f ${path}../components/validator.${uname_S}.yml up --force-recreate --remove-orphans -d

reset-mocknet-validator: stop clean run-mocknet-validator
